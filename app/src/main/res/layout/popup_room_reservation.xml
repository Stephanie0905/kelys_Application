<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="#BF000000"
    android:padding="5dp"
    android:theme="@style/AppTheme.PopUp"
    android:layout_gravity="center">
<TextView
    android:id="@+id/txtclose"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:textColor="#fff"
    android:textStyle="bold"
    android:layout_gravity="end"
    android:gravity="center"
    android:background="@drawable/cerclebackground"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtintut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Pour effectuer votre réservation, veuillez selectionner la date de réservation"/>

</LinearLayout>
<LinearLayout
    android:layout_marginTop="25dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="#FFC107"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Du"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/choose_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Selectionnez une date"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:background="#009688"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Au"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/choose_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Selectionnez une date"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"/>
    </LinearLayout>
</LinearLayout>

    <Button
        android:id="@+id/btn_reserv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_capsule"
        android:text="Réserver"
        android:textColor="#fff" />



</LinearLayout>