<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/card_listing_service"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#009688"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/list_hotel_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Nom de l'Hotel:"
            android:textColor="#fff"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/txtclose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-5dp"
            android:background="@drawable/cerclebackground"/>

        <TextView
            android:id="@+id/list_hotel_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@+id/txtclose"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/list_hotel_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@+id/list_hotel_desc"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/list_hotel_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date de crÃ©ation"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@+id/list_hotel_price"
            android:layout_marginTop="10dp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>